<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#df354a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/frameResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg_instruction" />

    <ImageView
        android:id="@+id/resultPanel"
        android:layout_width="247dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="@+id/frameResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/frameResult"
        app:layout_constraintTop_toTopOf="@+id/frameResult"
        app:layout_constraintVertical_bias="0.371"
        app:srcCompat="@drawable/bg_input_name" />

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/resultPanel"
        app:layout_constraintEnd_toEndOf="@+id/resultPanel"
        app:layout_constraintStart_toStartOf="@+id/resultPanel"
        app:layout_constraintTop_toTopOf="@+id/resultPanel" />

    <TextView
        android:id="@+id/score"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:text="Acertaste x"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameResult"
        app:layout_constraintStart_toStartOf="@+id/frameResult"
        app:layout_constraintTop_toBottomOf="@+id/resultPanel"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/resultBody"
        android:layout_width="309dp"
        android:layout_height="166dp"
        android:text="Estas listo."
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/frameResult"
        app:layout_constraintEnd_toEndOf="@+id/frameResult"
        app:layout_constraintStart_toStartOf="@+id/frameResult"
        app:layout_constraintTop_toBottomOf="@+id/score"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="@+id/frameResult"
        app:layout_constraintEnd_toEndOf="@+id/frameResult"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/frameResult"
        app:layout_constraintTop_toBottomOf="@+id/resultBody"
        app:layout_constraintVertical_bias="0.338" />


</androidx.constraintlayout.widget.ConstraintLayout>